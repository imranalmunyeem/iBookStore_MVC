@model iBookStore.Models.Book

@{
    ViewData["Title"] = "Details";
}

<h2 class="mb-4">Book Details</h2>

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Book Information</h3>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Title:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Title)</dd>

            <dt class="col-sm-3">Description:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>

            <dt class="col-sm-3">Language:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Language)</dd>

            <dt class="col-sm-3">ISBN:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.ISBN)</dd>

            <dt class="col-sm-3">Date Published:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.DatePublished)</dd>

            <dt class="col-sm-3">Price:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Price)</dd>

            <dt class="col-sm-3">Author:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Author)</dd>

            <dt class="col-sm-3">Image URL:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.ImageUrl)</dd>
        </dl>

        <div class="d-flex justify-content-between mt-4">
            <a asp-action="Index" class="btn btn-secondary"><i class="fa-solid fa-arrow-left"></i> Back</a>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
        </div>
    </div>
</div>
