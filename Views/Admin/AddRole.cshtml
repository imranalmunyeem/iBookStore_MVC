@model iBookStore.ViewModels.AddRoleViewModel

@{
    ViewData["Title"] = "Add Role";
}

<h2 class="mb-4">Add Role</h2>

<div class="card">
    <div class="card-body">
        <form asp-action="AddRole" method="post">
            <div class="form-group row">
                <label asp-for="RoleName" class="col-sm-2 col-form-label">Role Name:</label>
                <div class="col-sm-10">
                    <input asp-for="RoleName" class="form-control" placeholder="Enter Role Name" /> </br>
                    <span asp-validation-for="RoleName" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="offset-sm-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">Add Role</button> </br> </br>
                    <a asp-action="ListAllRoles" class="btn btn-secondary ml-2"><i class="fa-solid fa-arrow-left"></i> Back</a>
                </div>
            </div>
        </form>
    </div>
</div>
