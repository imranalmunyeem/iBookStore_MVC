@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>

@{
    ViewData["Title"] = "All Roles";
}

<h1 class="mb-4">@ViewData["Title"]</h1>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="m-0">Manage Roles</h2>
    <a class="btn btn-primary" asp-action="AddRole"><i class="fa-solid fa-users"></i> Add Role</a>
</div>

@if (Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Role</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var role in Model)
                {
                    <tr>
                        <td>@role.Name</td>
                        <td class="text-center">
                            <a asp-action="DeleteRole" asp-route-id="@role.Id" class="btn btn-danger btn-sm" title="Delete Role"><i class="fa-solid fa-trash-can"></i> Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info">
        <p>No roles have been created yet. Use the button above to add your first role.</p>
    </div>
}
