@model IEnumerable<iBookStore.Models.Book>
@{
    ViewData["Title"] = "Store";
}



<b><h3 class="my-4 text-center">Welcome to iBookStore</h3></b>

    <section class="filters">
        <form asp-action="Index" class="filter-form">
            <div class="filter-group">
                <label for="searchString">Filter search</label>
                <input type="text" name="searchString" id="searchString" placeholder="Book Title or Author" class="form-control" />
            </div>  </br>
            <div class="filter-group">
                <input type="number" name="minPrice" id="minPrice" step="1" placeholder="Minimum Price" class="form-control" />&nbsp;&#8212;&nbsp;<input type="number" name="maxPrice" id="maxPrice" step="1" placeholder="Maximum Price" class="form-control" />
            </div></br>
            <div class="filter-buttons">
                <button type="submit" class="btn btn-primary">Search</button>
                <a asp-action="Index" class="btn btn-secondary">Clear</a>
            </div>
        </form>
    </section>
    </br>


<div class="row">
    @foreach (var book in Model)
    {
        <div class="col-3">
            <div class="card my-2 store-card">
                <a class="a-cleanup" asp-controller="Store" asp-action="Details" asp-route-id="@book.Id">
                    <img src="@book.ImageUrl" class="card-img-top card-img-custom">
                    <div class="card-body" style="height: 6em;">
                        <h5 class="mb-3">@book.Title</h5>
                    </div>
                    <div class="card-body">
                        <span class="card-text">@book.Price.ToString("c")</span> 
                        <a asp-controller="Cart" asp-action="AddToCart" asp-route-id="@book.Id" class="btn btn-primary float-right store-btn"><i class="fa-solid fa-cart-plus"></i></a>
                    </div>
                </a>
            </div>
        </div>
    }
</div>